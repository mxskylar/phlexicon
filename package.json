{
    "name": "Phlexicon",
    "version": "0.0.0",
    "description": "A phonetic catalog for lexicons: Study a language. Document vocabulary. Analyze accents.",
    "main": "build/main.js",
    "author": "https://github.com/mxskylar",
    "license": "GNU General Public License v3.0",
    "scripts": {
        "install-bootswatch-theme": "curl -o resources/bootstrap.min.css https://bootswatch.com/5/cerulean/bootstrap.min.css",
        "install-bootstrap-js": "curl -o resources/bootstrap.bundle.min.js https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js",
        "rebuild-sqlite3": "electron-rebuild -f -w sqlite3",
        "postinstall": "npm run install-bootstrap-js && npm run install-bootswatch-theme && npm run rebuild-sqlite3",
        "init-db": "node db/init-db.js",
        "prep-build-dir": "rm -rf build && cp -r resources build",
        "compile-react": "webpack --mode development --config webpack.react.config.js",
        "compile-typescript": "tsc",
        "start": "npm run prep-build-dir && npm run compile-typescript && npm run compile-react && electron ."
    },
    "dependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-router-dom": "^7.4.0",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "electron": "^35.0.3",
        "@electron/rebuild": "^3.7.1",
        "typescript": "^5.8.2",
        "@types/react-dom": "^19.0.4",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1",
        "html-webpack-plugin": "^5.6.3",
        "babel-loader": "^10.0.0",
        "@babel/cli": "^7.26.4",
        "@babel/core": "^7.26.10",
        "@babel/plugin-transform-class-properties": "^7.18.6",
        "@babel/plugin-transform-arrow-functions": "^7.25.9",
        "@babel/preset-react": "^7.26.3",
        "@babel/preset-env": "^7.26.9",
        "@babel/preset-typescript": "^7.26.0"
    }
}
